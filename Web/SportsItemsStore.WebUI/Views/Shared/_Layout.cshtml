<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/themes/base/jquery.ui.autocomplete.css" type="text/css" rel="stylesheet" />

     @*@Styles.Render("~/Content/themes/base/css", "~/Content/css")    *@
     @Styles.Render("~/Content/css")
     @Styles.Render("~/Content/themes/base/css")  
     @Scripts.Render("~/bundles/jquery")
     @Scripts.Render("~/bundles/jqueryui")
     @Scripts.Render("~/bundles/jqueryval")


  @*   @Scripts.Render("~/bundles/modernizr")*@

</head>
<body style="background:#EEEEEE !important;">
    

    <div style="width:100%;height:100%  ">
    <header class="navbar navbar-inner navbar-fixed-top">
         <nav class="container">
            <div class="navbar-header">
               <img src="~/Content/images/logo1.jpg" alt="logo">
            </div>
             <div class="nav-container" data-collapse="isCollapsed">
                @{Html.RenderAction("Summary", "Cart");}
              
            </div>
         </nav>
    </header>
      
<div class="slide-animation-container">
    <div class="view">
    <div class="container glyphicon glyphicon-lock">
        <header>
            <h3><span class="glyphicon glyphicon-lock"></span> Login</h3>
        </header>
        <div id="categories"  >
            @{Html.RenderAction("Menu", "Nav");}
        </div>
       
        <div id="content">
            @RenderBody()
        </div>
    </div>
    </div>

</div>


 
    <div id="footer" >
        <div class="navbar navbar-fixed-bottom">
            <div class="navbar-inner footer">
                <div class="container">
                    <footer>
                        <div class="row">
                            <div class="col-md-12">
                                @@Copyright : Valtech_ ,2015
                            </div>
                        </div>
                    </footer>
                </div>
            </div>
        </div>
    </div>
</div>

    
    @RenderSection("scripts", required: false)
    <style>
        body {
            background: none repeat scroll 0 0 #fefeff;
        }
    </style>
</body>
</html>
